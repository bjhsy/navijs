{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["./example", "./dist", "node_modules"]
}
